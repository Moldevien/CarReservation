@model IEnumerable<Web.Models.Order.MyOrderViewModel>
@{
    ViewData["Title"] = "Мої замовлення";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>У вас ще немає замовлень.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Авто</th>
                <th>Період</th>
                <th>Статус</th>
                <th>Ціна / день</th>
                <th>Загальна сума</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CarName</td>
                    <td>@order.StartDate:dd.MM.yyyy - @order.EndDate:dd.MM.yyyy</td>
                    <td>@order.Status</td>
                    <td>@order.PricePerDay грн</td>
                    <td>@order.TotalPrice грн</td>
                </tr>
            }
        </tbody>
    </table>
}
